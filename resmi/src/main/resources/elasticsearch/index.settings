{
  "index": {
    "analysis": {
      "filter": {
        "spanish_stop_words": {
          "type": "stop",
          "stopwords": "_spanish_"
        },
        "nGram_filter": {
          "type": "nGram",
          "min_gram": 2,
          "max_gram": 25,
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "symbol"
          ]
        }
      },
      "analyzer": {
        "default_index": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "asciifolding",
            "spanish_stop_words",
            "nGram_filter",
            "icu_collation"
          ]
        },
        "default_search": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "asciifolding",
            "spanish_stop_words",
            "icu_collation"
          ]
        }
      }
    }
  }
}